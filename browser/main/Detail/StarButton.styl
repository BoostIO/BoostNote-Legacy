.root
  left 7px
  top 0
  padding 0
  &:hover
    background-color #DCDCDC
    .icon
      transform rotate(-72deg)
    .tooltip
      opacity 1

.root--active
  @extend .root
  color $ui-favorite-star-button-color
  &:hover
    color $ui-favorite-star-button-color
  .icon
    transform rotate(-72deg)

.icon
  transition transform 0.15s

body[data-theme="dark"]
  .root
    &:hover
      background-color #272B32